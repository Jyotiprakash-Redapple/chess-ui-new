{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "commonjs",
		"target": "es5",
		"sourceMap": true,
		"paths": {},
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"incremental": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"plugins": [
			{
				"name": "next"
			}
		]
	},
	"include": [".", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
